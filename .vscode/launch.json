    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run server",
            "type": "python",
            "request": "launch",
            "env": {
                "GAME_MODE": "server"
            },  
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Run client",
            "type": "python",
            "request": "launch",
            "env": {
                "GAME_MODE": "client"
            },  
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}